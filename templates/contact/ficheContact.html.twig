{% extends 'base.html.twig' %}

{% block title %}Fiche contact !{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Fiche contact</h1>
<div class="row">
    <div class="card border-primary mb-3 container">
        <h6 class="card-header">{{contact.prenom}} {{contact.nom}}</h6>
        <div class="row">
            <div class="col-2 d-flex align-items-center">
                <img class="avatar mx-auto my-3" style="height: auto; max-width: 200px; display: block;" src="{{contact.avatar}}" alt="Card image">
            </div>
            <div class="col">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{contact.rue}}</li>
                    <li class="list-group-item">{{contact.cp}}</li>
                    <li class="list-group-item">{{contact.ville}}</li>
                    <li class="list-group-item">{{contact.mail}}</li>
                    <li class="list-group-item">
                        {% if contact.sexe==0 %}
                            <span class="badge badge-info">homme</span>
                        {% else %}
                            <span class="badge badge-info">femme</span>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <a href="{{path('contacts')}}" class="btn btn-warning text-center">Revenir Ã  la liste</a>
</div>
{% endblock %}
