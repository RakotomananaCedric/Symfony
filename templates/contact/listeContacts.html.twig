{% extends 'base.html.twig' %}

{% block title %}Liste des contacts !{% endblock %}

{% block body %}
<h1 class="text-center pt-2">Liste des contacts</h1>
<div class="row">
    {% for contact in listeContact %}
        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-3">
            <div class="card border-primary mb-3">
                <h6 class="card-header">{{contact.prenom}} {{contact.nom}}</h6>
                <img class="avatar mx-auto my-3" style="height: auto; max-width: 200px; display: block;" src="{{contact.avatar}}" alt="Card image">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">{{contact.rue}}</li>
                    <li class="list-group-item">{{contact.cp}}</li>
                    <li class="list-group-item">{{contact.ville}}</li>
                    <li class="list-group-item">{{contact.mail}}</li>
                    <li class="list-group-item">
                        {% if contact.sexe==0 %}
                            <span class="badge badge-info">homme</span>
                        {% else %}
                            <span class="badge badge-info">femme</span>
                        {% endif %}
                    </li>
                </ul>
                <div class="card-body">
                    <a href="{{path('ficheContact', {'id': contact.id})}}" class="btn btn-primary btn-block text-center">Plus d'info</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
